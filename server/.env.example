# Server Configuration
CALDAV_SERVER_HOST=0.0.0.0
CALDAV_SERVER_PORT=8080
CALDAV_BASE_URL=http://localhost:8080

# Database Configuration
# SQLite (default - for development/testing)
CALDAV_DB_DRIVER=sqlite
CALDAV_DB_AUTO_MIGRATE=true

# PostgreSQL (for production)
# Uncomment and configure these for PostgreSQL:
# CALDAV_DB_DRIVER=postgres
# CALDAV_DB_HOST=postgres
# CALDAV_DB_PORT=5432
# CALDAV_DB_USER=caldav
# CALDAV_DB_PASSWORD=secret
# CALDAV_DB_NAME=caldav
# CALDAV_DB_SSLMODE=require

# JWT Secret (minimum 16 characters required)
# If not provided, a random secret will be auto-generated (not recommended for production)
# Generate a secure secret with: openssl rand -base64 32
CALDAV_JWT_SECRET=change-me-in-production

# JWT Expiry Times (optional)
# CALDAV_JWT_ACCESS_EXPIRY=15m
# CALDAV_JWT_REFRESH_EXPIRY=168h
# CALDAV_PASSWORD_RESET_EXPIRY=1h

# Logging
CALDAV_LOG_LEVEL=info

# CORS Configuration (enable for frontend development)
CALDAV_CORS_ENABLED=true
CALDAV_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080
CALDAV_CORS_ALLOW_CREDENTIALS=true
# CALDAV_CORS_MAX_AGE=86400

# Security Headers
CALDAV_SECURITY_HEADERS_ENABLED=true
CALDAV_HSTS_ENABLED=false
# CALDAV_HSTS_MAX_AGE=31536000
# CALDAV_MAX_REQUEST_SIZE=10485760
# CALDAV_REQUEST_TIMEOUT=30s

# Rate Limiting
CALDAV_RATE_LIMIT_ENABLED=true
CALDAV_RATE_LIMIT_REQUESTS=100
# CALDAV_RATE_LIMIT_WINDOW=1m

# TLS/SSL (for production)
# CALDAV_TLS_ENABLED=false
# CALDAV_TLS_CERT_FILE=/path/to/cert.pem
# CALDAV_TLS_KEY_FILE=/path/to/key.pem

# SMTP Configuration (for email verification and password reset)
# CALDAV_SMTP_HOST=smtp.example.com
# CALDAV_SMTP_PORT=587
# CALDAV_SMTP_USER=noreply@example.com
# CALDAV_SMTP_PASSWORD=secret
# CALDAV_SMTP_FROM=noreply@example.com

# OAuth/OIDC Providers (optional)
# Configure one or more providers for SSO authentication

# Google OAuth 2.0 / OIDC
# Create credentials at: https://console.cloud.google.com/apis/credentials
# CALDAV_OAUTH_GOOGLE_CLIENT_ID=123456789-abcdefghijklmnop.apps.googleusercontent.com
# CALDAV_OAUTH_GOOGLE_CLIENT_SECRET=GOCSPX-abcdefghijklmnopqrstuvwx
# CALDAV_OAUTH_GOOGLE_ISSUER=https://accounts.google.com

# Microsoft Azure AD / Entra ID
# Create app registration at: https://portal.azure.com/#view/Microsoft_AAD_IAM/ActiveDirectoryMenuBlade/~/RegisteredApps
# For multi-tenant: use /common/v2.0
# For single tenant: use /YOUR_TENANT_ID/v2.0
# CALDAV_OAUTH_MICROSOFT_CLIENT_ID=12345678-1234-1234-1234-123456789abc
# CALDAV_OAUTH_MICROSOFT_CLIENT_SECRET=abc~defghijklmnopqrstuvwxyz123456
# CALDAV_OAUTH_MICROSOFT_ISSUER=https://login.microsoftonline.com/common/v2.0

# Custom OIDC Provider Examples:

# Auth0
# Create application at: https://manage.auth0.com/
# CALDAV_OAUTH_CUSTOM_CLIENT_ID=abcdefghijklmnopqrstuvwx
# CALDAV_OAUTH_CUSTOM_CLIENT_SECRET=your-secret-key-here-long-string-of-characters
# CALDAV_OAUTH_CUSTOM_ISSUER=https://your-tenant.auth0.com

# Keycloak
# Configure client in your Keycloak realm
# CALDAV_OAUTH_CUSTOM_CLIENT_ID=caldav-client
# CALDAV_OAUTH_CUSTOM_CLIENT_SECRET=your-client-secret-from-keycloak
# CALDAV_OAUTH_CUSTOM_ISSUER=https://keycloak.example.com/realms/your-realm

# Okta
# Create application at: https://developer.okta.com/
# CALDAV_OAUTH_CUSTOM_CLIENT_ID=0oa123456789abcdefgh
# CALDAV_OAUTH_CUSTOM_CLIENT_SECRET=your-secret-key-here
# CALDAV_OAUTH_CUSTOM_ISSUER=https://your-domain.okta.com

# GitLab (Self-hosted or GitLab.com)
# Create application at: https://gitlab.com/-/profile/applications (or your instance)
# CALDAV_OAUTH_CUSTOM_CLIENT_ID=abcdef1234567890abcdef1234567890abcdef1234567890abcdef1234567890
# CALDAV_OAUTH_CUSTOM_CLIENT_SECRET=1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
# CALDAV_OAUTH_CUSTOM_ISSUER=https://gitlab.com (or https://gitlab.example.com)

# Authentik
# Create provider in your Authentik instance
# CALDAV_OAUTH_CUSTOM_CLIENT_ID=your-client-id
# CALDAV_OAUTH_CUSTOM_CLIENT_SECRET=your-client-secret
# CALDAV_OAUTH_CUSTOM_ISSUER=https://authentik.example.com/application/o/your-app/

# Zitadel
# Create application in your Zitadel instance
# CALDAV_OAUTH_CUSTOM_CLIENT_ID=123456789@project-name
# CALDAV_OAUTH_CUSTOM_CLIENT_SECRET=your-client-secret
# CALDAV_OAUTH_CUSTOM_ISSUER=https://your-instance.zitadel.cloud

# Generic OIDC Provider
# Replace with your provider's details
# CALDAV_OAUTH_CUSTOM_CLIENT_ID=your-client-id
# CALDAV_OAUTH_CUSTOM_CLIENT_SECRET=your-client-secret
# CALDAV_OAUTH_CUSTOM_ISSUER=https://your-oidc-provider.com

# SAML Configuration (optional)
# CALDAV_SAML_ENTITY_ID=https://caldav.example.com
# CALDAV_SAML_IDP_METADATA_URL=https://idp.example.com/metadata
# CALDAV_SAML_IDP_SSO_URL=https://idp.example.com/sso
# CALDAV_SAML_IDP_CERT=/path/to/idp-cert.pem
# CALDAV_SAML_SP_CERT=/path/to/sp-cert.pem
# CALDAV_SAML_SP_KEY=/path/to/sp-key.pem
# CALDAV_SAML_SIGN_REQUESTS=true
# CALDAV_SAML_WANT_SIGNED_ASSERTIONS=true

# Data Directory (for SQLite and uploaded files)
# CALDAV_DATA_DIR=./data
